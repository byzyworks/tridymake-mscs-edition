{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch REST Server (Development)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["server", "--localhost", "--log-level", "debug"],
            "outputCapture": "std",
            "console": "externalTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch REST Server (Production)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["server", "--localhost"],
            "outputCapture": "std",
            "console": "externalTerminal"
        }
    ]
}