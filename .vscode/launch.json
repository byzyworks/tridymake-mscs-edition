{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test File (Development)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["inline", "--file", "src/tests/_debug/test.tri", "--log-level", "debug"],
            "outputCapture": "std",
            "console": "externalTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test File (Production)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["inline", "--file", "src/tests/_debug/test.tri"],
            "outputCapture": "std",
            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test Console (Development)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["console", "--file", "src/tests/_debug/test.tri", "--log-level", "debug"],
            "outputCapture": "std",
            "console": "externalTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test Console (Production)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["console", "--file", "src/tests/_debug/test.tri"],
            "outputCapture": "std",
            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Client Test File (Development)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["inline", "--file", "src/tests/_debug/test.tri", "--client", "--log-level", "debug"],
            "outputCapture": "std",
            "console": "externalTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Client Test File (Production)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["inline", "--file", "src/tests/_debug/test.tri", "--client"],
            "outputCapture": "std",
            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Client Test Console (Development)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["console", "--file", "src/tests/_debug/test.tri", "--client", "--log-level", "debug"],
            "outputCapture": "std",
            "console": "externalTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Client Test Console (Production)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["console", "--file", "src/tests/_debug/test.tri", "--client"],
            "outputCapture": "std",
            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server (Development)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["server", "--file", "src/tests/_debug/test.tri", "--localhost", "--log-level", "debug", "--server-allow-verbatim"],
            "outputCapture": "std",
            "console": "externalTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server (Development) (Preformatting)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["server", "--file", "src/tests/_debug/test.tri", "--localhost", "--log-level", "debug", "--server-allow-verbatim", "--server-preformat"],
            "outputCapture": "std",
            "console": "externalTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server (Production)",
            "program": "${workspaceFolder}/src/app.js",
            "cwd": "${workspaceFolder}/",
            "args": ["server", "--file", "src/tests/_debug/test.tri", "--localhost"],
            "outputCapture": "std",
            "console": "externalTerminal"
        }
    ]
}