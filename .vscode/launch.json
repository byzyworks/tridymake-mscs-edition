{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch CLI",
            "program": "${workspaceFolder}/habitat/src/app.js",
            "cwd": "${workspaceFolder}/habitat",
            "args": ["console", "--log-level", "debug"],
            "outputCapture": "std",
            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch REST API",
            "program": "${workspaceFolder}/habitat/src/app.js",
            "cwd": "${workspaceFolder}/habitat",
            "args": ["web", "--log-level", "debug"],
            "outputCapture": "std",
            "console": "externalTerminal"
        }
    ]
}