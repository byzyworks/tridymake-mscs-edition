{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test Console (Development)",
            "program": "${workspaceFolder}/tridydb-cli/src/app.js",
            "cwd": "${workspaceFolder}/tridydb-cli",
            "args": ["console", "--log-level", "debug", "--pretty"],
            "outputCapture": "std",
            "console": "externalTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test Console (Production)",
            "program": "${workspaceFolder}/tridydb-cli/src/app.js",
            "cwd": "${workspaceFolder}/tridydb-cli",
            "args": ["console"],
            "outputCapture": "std",
            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch REST Client (Development)",
            "program": "${workspaceFolder}/tridydb-cli/src/app.js",
            "cwd": "${workspaceFolder}/tridydb-cli",
            "args": ["console", "--host", "localhost", "--log-level", "debug", "--pretty"],
            "outputCapture": "std",
            "console": "externalTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch REST Client (Production)",
            "program": "${workspaceFolder}/tridydb-cli/src/app.js",
            "cwd": "${workspaceFolder}/tridydb-cli",
            "args": ["console", "--host", "localhost"],
            "outputCapture": "std",
            "console": "externalTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch REST Server (Development)",
            "program": "${workspaceFolder}/tridydb-cli/src/app.js",
            "cwd": "${workspaceFolder}/tridydb-cli",
            "args": ["server", "--log-level", "debug"],
            "outputCapture": "std",
            "console": "externalTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch REST Server (Production)",
            "program": "${workspaceFolder}/tridydb-cli/src/app.js",
            "cwd": "${workspaceFolder}/tridydb-cli",
            "args": ["server"],
            "outputCapture": "std",
            "console": "externalTerminal"
        }
    ]
}